{
    // +'s at the start of keys are ignored, they simply make stuff append to existing objects.
    // instead of replacing them.
    "+display_configuration":
    {
        "+known_displays":
        {
            // Children here represent known displays, and overrides for those known displays for
            // things that are not in the EDID, or are not representable in EDID/MIPI/etc.

            "steamdeck_lcd":
